{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./lib",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"lib": ["es2020", "DOM"]
	},
	"include": ["./src/**/*.ts"]
}
